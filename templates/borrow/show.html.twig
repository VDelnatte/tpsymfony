{% extends 'base.html.twig' %}

{% block title %}Borrow{% endblock %}

{% block body %}
    <h1>Emprunt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id : </th>
                <td>{{ borrow.id }}</td>
            </tr>
            <tr>
                <th>Utilisateur : </th>
                <td>{{ borrow.user.name }}</td>
            </tr>
            <tr>
                <th>Email : </th>
                <td>{{ borrow.user.email }}</td>
            </tr>
            <tr>
                <th>Livre : </th>
                <td>{{ borrow.book.title }}</td>
            </tr>
            <tr>
                <th>Date d'emprunt : </th>
                <td>{{ borrow.borrowDate ? borrow.borrowDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    <label for="status"></label>
                    <select name="status" id="status">
                        <option value="En cours">En cours</option>
                        <option value="Retourné">Retourné</option>
                    </select>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_borrow_edit', {'id': borrow.id}) }}">Modifier</a>

    {{ include('borrow/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('app_borrow_index') }}">Retour à la liste</a>

{% endblock %}

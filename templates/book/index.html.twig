{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Livres</h1>

    <label for="sort">Trier par : </label>
    <select name="sort" id="sort">
        <option>Titre</option>
        <option>Pr√©nom</option>
        <option>Nom</option>
        <option>Genre</option>
        <option>Date de publication</option>
    </select>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Genre</th>
                <th>Date de publication</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        <br>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.author.firstName }} {{ book.author.lastName}}</td>
                <td>{{ book.genre }}</td>
                <td>{{ book.publishedAt ? book.publishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}">Voir</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('app_book_new') }}">Nouveau livre</a>
{% endblock %}

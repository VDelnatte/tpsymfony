{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>{{ author.firstName }} {{ author.lastName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Prénom : </th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Nom : </th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>Biographie :</th>
                <td>{{ author.bio }}</td>
            </tr>
        </tbody>
    </table>
    <br>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">Modifier</a>

    {{ include('author/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('app_author_index') }}">Retour à la liste</a>

{% endblock %}
